@model BLL.DTO.AnswerDto 

<h2>New answer for @ViewBag.Question.TaskText</h2>
<form method="post" asp-controller="Answer" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input asp-for="QuestionId" type="hidden" value="@ViewBag.Question.Id" />
    </div>
    <div>
        <label asp-for="Text"></label><br />
        <input asp-for="Text" />
        <span asp-validation-for="Text"></span><br />
        <label asp-for="IsCorrect"></label>
        <input asp-for="IsCorrect" />
        <span asp-validation-for="IsCorrect"></span>
    </div>
    <div class="submit-wrapper flex-line">
        <input class="btn-dark" type="submit" value="Create" />
        <a class="btn-dark" asp-controller="Answer" asp-action="Index" asp-route-questionId="@ViewBag.Question.Id">Back</a>
    </div>
</form>
