@model BLL.DTO.ThemeDto 

<h2>New theme</h2>
<form method="post" asp-controller="Theme" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Title"></label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>
</form>

<a asp-controller="Theme" asp-action="Index">Back</a>