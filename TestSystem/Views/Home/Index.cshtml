@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    @if (User.IsInRole("Administrator"))
    {
        <a asp-controller="Theme" asp-action="Index">Themes</a>
        <br />
        <a asp-controller="Result" asp-action="Index">Results</a>
    }
    else if (User.IsInRole("User"))
    {
        <a asp-controller="UserTesting" asp-action="Index">Available tests</a>
    }

    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Log out" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Log in</a>
    <br />
    <a asp-controller="Account" asp-action="Register">Register</a>
}